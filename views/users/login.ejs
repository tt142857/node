<%- include('../grid/top') %>

<form id="signinForm" method="post">
  <input id="id" name="id" type="text" placeholder="ID" />
  <input id="pw" name="pw" type="password" placeholder="PASSWORD" />
  <button type="button" onclick="fn_signin()">SIGN IN</button>
  <a href="/signup"><button type="button">SIGN UP</button></a>
</form>

<%- include('../grid/footer') %>

<script>
  const fn_signin = () => {
    var id = $('#id').val();
    var pw = $('#pw').val();
    if(isEmpty(id)) {
      alert('아이디를 입력해 주십시오.');
      return false;
    } else if(isEmpty(pw)) {
      alert('비밀번호를 입력해 주십시오.');
      return false;
    }

    $('#signinForm').submit();
  }
//https://www.kgcshop.co.kr/shop/goodsList?ctgryId=2367
</script>